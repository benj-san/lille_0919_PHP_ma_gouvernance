{% extends 'base.html.twig' %}

{% block title %}Construire le board{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('board') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block main %}

    <div id="displayCvAdvisor">
        {% include 'cvAdvisor.html.twig' %}
    </div>

    {% for advisor in advisors %}
        <div class="commentAdvisor">
            <p>Justification de candidature</p>
            <form id="resumeJustification" action="{{ path('formBoard', {'board': board.id, 'advisor': advisor.id}) }}" method="POST">
                <label for="story">
                    <textarea id="resumeJustification" name="resume" rows="10" cols="33"></textarea>
                </label>
                <input type="submit">
            </form>

        </div>

        <div class="deleteAdvisor">
            <p>Retirer {{ advisor.firstname }} {{ advisor.name }} ?</p>
            <div id="ddAdvisor">
                <a href="{{ path('deleteAdvisorFromBoard', {'board': board.id, 'advisor': advisor.id}) }}">
                    <button class="definitiveDeleteAdvisor">Retirer du board</button>
                </a>
            </div>
        </div>
    {% endfor %}

    <div id="allAdvisorsBoard">
    <section id="allCardsContainer">
    {% for advisor in advisors %}
        <div class="cardAdvisors">
            <img src="https://www.laravoire.immo/wp-content/uploads/2017/06/Business-Woman-papers.jpg" alt=""/>
            <div class="cardTitle">{{ advisor.firstname }} {{ advisor.name }}</div>
            <p>{{ advisor.place }}</p>
        </div>
    {% endfor %}
    </section>
        <div class="deleteAdvisorButton">
            <img src="{{ asset('build/delete.png') }}" alt="" class="iconDeleteAllAdvisors">
        </div>
    </div>

    <div id="behind">
    </div>

    <div id="boardAndBoardAdvisors">
        <div id="board">
            <h1>RÃ©aliser mon board</h1>
            <div id="boardEdit">
                {{ form_start(formBoard) }}
                {{ form_widget(formBoard) }}
                {{ form_end(formBoard) }}
            </div>
            <a href="{{ path('client_board', {'uuid': board.uuid}) }}"><button>Voir</button></a>
        </div>

        <div id="boardAdvisors">
            {#<label id="research">
                <input placeholder="Rechercher">
            </label>
            #}
            <button id="takeAdvisors">Tous les advisors</button>

            {% for advisor in advisors %}
                <div class="cardAdvisorAndAdd">
                    <div id="cardAdvisor" class="cardAdvisorJS">
                        <img src="{{ asset('build/pp.png') }}" alt="" class="pp">
                        <div id="cardAdvisorInfos">
                            <p class="nameAdvisor">{{ advisor.name }} {{ advisor.firstname }}</p>
                            <p class="infosAdvisor">{{ advisor.email }}<br>{{ advisor.place }}</p>
                            <p class="idAdvisor">{{ advisor.id }}</p>
                        </div>
                        <div class="addCardAdvisor">
                            <img src="{{ asset('build/add.png') }}" alt="" class="iconAdd">
                            <img src="{{ asset('build/delete.png') }}" alt="" class="iconDelete">
                            <img src="{{ asset('build/cv.png') }}" alt="" class="iconCv">
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('board') }}
{% endblock %}
